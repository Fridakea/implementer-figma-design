---
import { Image } from "astro:assets";

const { variant, image, title, header } = Astro.props;
---

<section class={variant}>
  <Image src={image} alt="Billede af kvinde" />
  <div class="content">
    <div class="page-name flex-col">
      <h6>{title}</h6>
      <h1>{header}</h1>
    </div>
  </div>
</section>

<style>
  section {
    width: 100%;
    margin-bottom: var(--spacing-2xl);
    position: relative;

    & img {
      width: 100%;
      position: absolute;
      object-fit: cover;
      z-index: -1;
    }
  }

  .content {
    height: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
  }

  .page-name {
    padding: var(--spacing-m);
    border-radius: var(--rounding-m);
    background-color: var(--primary-color-tint);

    & h1 {
      text-transform: capitalize;
      max-width: 650px;
    }
  }

  /* Classnames for different variants */
  .small {
    height: 300px;
  }

  .big {
    height: 400px;
  }

  @media (min-width: 769px) {
    .section {
      margin-bottom: var(--spacing-3xl);
    }

    .page-name {
      padding: var(--spacing-xl);
    }

    /* Classnames for different variants */
    .small {
      height: 500px;
    }

    .big {
      height: 600px;
    }
  }
</style>
