---
import FacebookIcon from "../assets/icons/FacebookIcon.astro";
import InstagramIcon from "../assets/icons/InstagramIcon.astro";
import TwitterIcon from "../assets/icons/TwitterIcon.astro";

const { link, image, name, jobTitle, variant } = Astro.props;
---

<section class="flex-col align-center">
  <a class="card" href={link}>
    <div class="image">
      <img src={image} alt=`Billede af ${name}` />
      <p class={variant}>{jobTitle}</p>
    </div>
    <h3>{name}</h3>
    <p>
      Leverage agile frameworks to provide a robust synopsis for high level
      overviews.
    </p>
    <div class="some">
      <InstagramIcon />
      <FacebookIcon />
      <TwitterIcon />
    </div>
  </a>
</section>

<style>
  a {
    margin-bottom: var(--spacing-m);
  }

  .card {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-s);

    & .image {
      position: relative;
      width: 100%;
      height: 100%;
      aspect-ratio: 1 / 1;

      display: flex;
      align-items: flex-end;
      justify-content: flex-end;

      & img {
        width: 100%;
        height: 100%;
        position: absolute;
        object-fit: cover;
        object-position: 50% 15%;
        border-radius: var(--rounding-s);
        z-index: -1;
      }

      & > p {
        padding: var(--spacing-3xs) var(--spacing-s);
        border-radius: var(--rounding-m);
        font-weight: 600;
      }
    }

    & > p {
      text-align: center;
    }

    & h3 {
      margin-top: var(--spacing-2xs);
      margin-bottom: 0;
    }
  }

  .some {
    display: flex;
    flex-direction: row;
    gap: var(--spacing-s);
  }

  /* classnames for different variants */
  .action {
    margin: var(--spacing-m) 20px;
    background-color: var(--action-color);
    color: var(--action-text-color);
  }

  .secondary {
    margin: var(--spacing-m) 10px;
    background-color: var(--secondary-color);
    color: var(--secondary-text-color);
  }
</style>
