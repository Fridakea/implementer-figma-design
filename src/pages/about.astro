---
import { Image } from "astro:assets";
import AboutImage from "../images/about-image.png";

import MainLayout from "../layouts/MainLayout.astro";
import HeroSection from "../components/HeroSection.astro";
import ValueSection from "../components/ValueSection.astro";
import VisionSection from "../components/VisionSection.astro";
import FAQSection from "../components/FAQSection.astro";
import Newsletter from "../components/Newsletter.astro";
---

<MainLayout title="About">
  <HeroSection
    variant="big"
    image={AboutImage}
    title="Services"
    header="Creative Services For Boost Your Business Growth"
  />

  <VisionSection />

  <ValueSection variant="light" color="secondary" />

  <FAQSection />

  <Newsletter />
</MainLayout>
