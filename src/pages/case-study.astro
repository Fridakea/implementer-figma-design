---
import { Image } from "astro:assets";
import CaseStudyImage from "../images/case-study-image.png";
import Image7 from "../images/image-7.png";

import MainLayout from "../layouts/MainLayout.astro";
import HeroSection from "../components/HeroSection.astro";
import Button from "../components/Button.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Newsletter from "../components/Newsletter.astro";
---

<MainLayout title="Case study">
  <Header />

  <main>
    <HeroSection
      variant="small"
      image={CaseStudyImage}
      title="Case Studies single"
      header="Taxes & Efficiency"
    />

    <section class="content">
      <Image src={Image7} alt="Billede" />
      <div class="study-card flex-col pc-flex-row">
        <div class="flex-row case-flex">
          <div class="flex-col">
            <h5>Case Name</h5>
            <p>Taxes & Efficiency</p>
          </div>
          <div class="flex-col">
            <h5>Category</h5>
            <p>Business</p>
          </div>
          <div class="flex-col">
            <h5>Date</h5>
            <p>27th September 2022</p>
          </div>
        </div>
        <Button color="action" text="Live Preview" />
      </div>
    </section>

    <Newsletter />
  </main>

  <Footer />
</MainLayout>

<style>
  .content img {
    max-height: 450px;
    border-radius: var(--rounding-s);
    position: relative;
    z-index: -1;
    object-fit: cover;
  }

  .study-card {
    max-width: 1030px;
    margin: auto;
    margin-top: -50px;
    margin-bottom: var(--spacing-2xl);
    padding: var(--spacing-l);
    border-radius: var(--rounding-m);
    background-color: var(--secondary-color);

    align-items: center;

    & * {
      color: var(--secondary-text-color);
    }
  }

  .case-flex {
    width: 100%;
    justify-content: space-around;
  }

  @media (min-width: 769px) {
    .study-card {
      padding: var(--spacing-2xl);
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: var(--spacing-3xl);
    }

    .case-flex {
      width: 74%;
      justify-content: flex-start;
      gap: var(--spacing-3xl);
    }
  }
</style>
