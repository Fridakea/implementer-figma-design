---
import Button from "../components/Button.astro";
import ValueCard from "./ValueCard.astro";
const { variant } = Astro.props;
---

<section class={variant}>
  <div class="content">
    <div class="flex-row space-between mb-xl">
      <div>
        <h6>Growing With our clients</h6>
        <h2>Our core values & principles</h2>
        <p>
          Capitalize on low hanging fruit to identify a ballpark value added
          activity beta test. Override the digital divide with additional from
          DevOps.
        </p>
      </div>
      <Button color="primary" buttonText="Get In Touch" />
    </div>
    <div>
      <ValueCard />
    </div>
  </div>
</section>

<style>
  section {
    padding: var(--spacing-3xl) 0;

    & h6 {
      max-width: 242px;
    }
  }

  .light {
    background-color: var(--primary-color-shade);
  }

  .dark {
    background-color: var(--secondary-color);

    & h2,
    p {
      color: var(--secondary-text-color);
    }
  }
</style>
